<tool id="${serviceId}" name="${serviceId}" version="0.0.1">
  <description>${serviceName}(${serviceType}): ${serviceDescription}</description>
  <command interpreter="JAVA_OPTS=-Dfile.encoding=UTF-8 ${groovyPath}">TRANSLATION.groovy ${serviceId} $additionalUrlParam $sourceLang $targetLang "$input"  > $targetTexts</command>
    <inputs>
      <param format="txt" name="input" type="data" label="sourceTexts" />
      <param type="text" name="additionalUrlParam" value=""/>
      <param type="text" name="sourceLang" value=""/>
      <param type="text" name="targetLang" value=""/>
    </inputs>
    <outputs>
      <data format="txt" name="targetTexts" />
    </outputs>
</tool>
